<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeActivity"
    android:background="@drawable/default_bg"
    >
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/NavigationBar"
            />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/NavigationBar"
        style="@style/buttom_navigation_Bar_Theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/homenavigation"
        app:itemTextColor="@color/bottom_navigation_item"
        app:itemIconTint="@color/bottom_navigation_item"
        />

</androidx.constraintlayout.widget.ConstraintLayout>